<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray20">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dialog_tool_bar"
        app:theme="@style/Toolbar"
        app:popupTheme="@style/test"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"


        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contact_photo_toolbar"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPurple40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contact_name_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/font_pf_text_bold"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textColor="@color/colorGray20"
                app:layout_constraintStart_toEndOf="@+id/contact_photo_toolbar"
                app:layout_constraintTop_toTopOf="parent" />



        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.Toolbar>





    <TextView
        android:id="@+id/empty_dialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/font_pf_display_regular"
        android:gravity="center"
        android:text="@string/empty_dialog"
        android:textColor="@color/colorPurple100"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tool_bar" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tool_bar"
        tools:layout_editor_absoluteX="0dp">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:maxHeight="128dp"
        android:background="@color/colorPurple100"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/input_text_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/font_pf_display_regular"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:hint="@string/input_text"

            android:background="@null"
            android:textColorHint="@color/colorPurple20"/>

        <Button
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:id="@+id/send_message_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_send_api"/>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>