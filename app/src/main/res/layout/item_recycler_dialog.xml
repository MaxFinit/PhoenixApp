<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_dialog_item"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_dialog_item"
        style="@style/MainScreenLableStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/image_dialog_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Василий" />

    <TextView
        android:id="@+id/preview_dialog_item"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/font_pf_display_regular"
        android:textColor="@color/colorGray100"
        app:layout_constraintStart_toEndOf="@+id/image_dialog_item"
        app:layout_constraintTop_toBottomOf="@+id/name_dialog_item"
        tools:text="Ехал Грека через реку" />


    <TextView
        android:id="@+id/time_dialog_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/font_pf_display_light"
        android:textColor="@color/colorPurple100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15:25" />

</android.support.constraint.ConstraintLayout>