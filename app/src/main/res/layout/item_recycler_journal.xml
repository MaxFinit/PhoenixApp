<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/journal_photo_image_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_contact_circle_api"
        app:civ_border_color="@color/colorPurple100"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/journal_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_pf_display_regular"
        android:text="@string/app_name"
        android:textColor="@color/colorPurple100"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/journal_photo_image_view"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/journal_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/font_pf_display_regular"
        android:text="@string/app_name"
        android:textColor="@color/colorPurple60"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/journal_photo_image_view"
        app:layout_constraintTop_toBottomOf="@+id/journal_name_text_view" />


    <TextView
        android:id="@+id/journal_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/app_name"
        android:fontFamily="@font/font_pf_display_light"
        android:textColor="@color/colorPurple100"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/journal_type_call_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_call_received" />

</android.support.constraint.ConstraintLayout>