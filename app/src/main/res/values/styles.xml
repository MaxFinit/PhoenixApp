<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGray100</item>
        <item name="colorPrimaryDark">@color/colorGray100</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<style name="MainScreenButtonStyle">
    <item name="android:paddingStart">16dp</item>
    <item name="android:fontFamily">@font/font_pf_display_regular</item>
    <item name="android:background">@color/colorWhite</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">60dp</item>
</style>
    
    <style name="MainScreenLableStyle">
        <item name="android:fontFamily">@font/font_pf_display_regular</item>
        <item name="android:textColor">@color/colorPurple100</item>
    </style>

    <style name="MainScreenValueStyle">

        <item name="android:fontFamily">@font/font_pf_text_bold</item>
        <item name="android:textColor">@color/colorPurple100</item>

    </style>

</resources>
