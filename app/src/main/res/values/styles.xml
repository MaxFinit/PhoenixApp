<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPurple100</item>
        <item name="colorPrimaryDark">@color/colorPurple100</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorGray20</item>
        <item name="android:textColorPrimary">@color/colorPurple100</item>
    </style>

    <style name="MainScreenButtonStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">@font/font_pf_display_regular</item>
        <item name="android:background">@drawable/list_contacts_states</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="MainScreenLableStyle">
        <item name="android:fontFamily">@font/font_pf_display_regular</item>
        <item name="android:textColor">@color/colorPurple100</item>
    </style>

    <style name="MainScreenValueStyle">

        <item name="android:fontFamily">@font/font_pf_text_bold</item>
        <item name="android:textColor">@color/colorPurple100</item>

    </style>

    <style name="EmptyListStyle">
        <item name="android:fontFamily">@font/font_pf_display_regular</item>
        <item name="android:textColor">@color/colorPurple100</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/rectangle_rounded</item>
    </style>


    <style name="KeyboardButton">

        <item name="android:background">@drawable/button_state</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">4dp</item>


    </style>




    <style name="Toolbar">

        <item name="android:background">@color/colorPurple100</item>
        <item name="android:textColorPrimary">@color/colorPurple100</item>
        <item name="android:windowBackground">@color/colorGray20</item>
        <item name="android:colorForeground">@color/colorPurple100</item>
        <item name="android:textColorHint">@color/colorGray20</item>
        <item name="android:textColorSecondary">@color/colorGray20</item>
        <item name="android:textColorSecondaryInverse">@color/colorGray20</item>
        <item name="android:textColorTertiary">@color/colorGray20</item>
        <item name="android:textColorHintInverse">@color/colorGray20</item>
    </style>


    <style name="test">
        <item name="android:background">@color/colorGray20</item>
    </style>


</resources>
