        <item name="colorPrimary">@color/colorPurple100</item>
        <item name="colorPrimaryDark">@color/colorPurple100</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainScreenButtonStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">@font/font_pf_display_regular</item>
